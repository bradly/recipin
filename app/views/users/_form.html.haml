= form_for user do |form|
  - if user.persisted?
    = form.label :name do
      Name:
      = form.text_field :name, placeholder: 'Name'
  - else
    = form.label :email do
      Email:
      = form.email_field :email, value: params.dig(:session, :email), placeholder: 'Email'
    = form.label :password do
      Password:
      = form.password_field :password, placeholder: 'Password'

  = form.submit
